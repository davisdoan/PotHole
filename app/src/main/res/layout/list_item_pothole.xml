<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_pothole_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentRight="true"
        android:text="Date: "
        />

    <TextView
        android:id="@+id/list_item_pothole_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toLeftOf="@id/list_item_pothole_date"
        android:textStyle="bold"
        android:text="User Id: "
        />

    <TextView
        android:id="@+id/list_item_pothole_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toLeftOf="@id/list_item_pothole_date"
        android:layout_below="@id/list_item_pothole_userid"
        android:text="Latitude: "
        />
    <TextView
        android:id="@+id/list_item_posthole_longitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toLeftOf="@id/list_item_pothole_date"
        android:layout_below="@id/list_item_pothole_latitude"
        android:text="Longitude: "
        />
</RelativeLayout>