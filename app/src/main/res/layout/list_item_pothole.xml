<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#93f366">
    <ImageView
        android:id="@+id/list_item_pothole_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:background="#838080"/>

    <TextView
        android:id="@+id/list_item_pothole_date"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/list_item_pothole_photo"
        android:layout_alignParentRight="true"
        android:text="Date: "

        />

    <TextView
        android:id="@+id/list_item_pothole_userid"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/list_item_pothole_photo"

        android:text="User Id: "
        android:layout_below="@+id/list_item_pothole_date"/>

    <TextView
        android:id="@+id/list_item_pothole_latitude"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/list_item_pothole_photo"
        android:layout_below="@id/list_item_pothole_userid"
        android:text="Latitude: "
        />
    <TextView
        android:id="@+id/list_item_posthole_longitute"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/list_item_pothole_photo"
        android:layout_below="@id/list_item_pothole_latitude"
        android:text="Longitude: "
        />
</RelativeLayout>